<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
                <h1>Welcome To YelpCamp!</h1>
                <p>View our hand-picked campground from all over the world</p>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/new">Add a campground</a>
                    <a class="btn btn-primary" href="/landing">Back to landing</a>
                </p>
        </div>
    </header>
    
    <div class="row" style="display:flex;flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campground Site</h3>
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-sm-4 col-xs-6">
                    <div class="thumbnail text-center">
                            <img class="img-thumbnail img-responsive" src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<% include ../partials/footer %>
